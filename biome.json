{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"biome.json",
			"package.json",
			"tsconfig.json",
			"src/**/*.ts",
			"src/**/*.tsx",
			"!src/**/*.gen.ts",
			"src/**/*.scss",
			"src/**/*.css",
			"test/**/*.ts",
			"test/**/*.tsx",
			"vite.config.ts"
		]
	},
	"formatter": {
		"attributePosition": "auto",
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSameLine": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"trailingCommas": "none"
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"domains": {
			"project": "all",
			"react": "all",
			"test": "all"
		},
		"enabled": true,
		"rules": {
			"a11y": {
				"useButtonType": "off"
			},
			"complexity": "error",
			"correctness": "error",
			"performance": {
				"noAccumulatingSpread": "error",
				"noBarrelFile": "error",
				"noDelete": "error",
				"noDynamicNamespaceImportAccess": "error",
				"noImgElement": "off",
				"noNamespaceImport": "error",
				"noReExportAll": "error",
				"useTopLevelRegex": "error"
			},
			"recommended": true,
			"security": "error",
			"style": {
				"noCommonJs": "error",
				"noDefaultExport": "error",
				"noDescendingSpecificity": "error",
				"noDoneCallback": "error",
				"noEnum": "error",
				"noExportedImports": "error",
				"noHeadElement": "error",
				"noImplicitBoolean": "error",
				"noInferrableTypes": "error",
				"noNamespace": "error",
				"noNegationElse": "error",
				"noNestedTernary": "error",
				"noNonNullAssertion": "error",
				"noParameterAssign": "error",
				"noParameterProperties": "error",
				"noProcessEnv": "error",
				"noRestrictedGlobals": "error",
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"@/admin-console/services/backend-service.ts": {
								"importNames": [
									"adminConsole"
								],
								"message": "Use Service.adminConsole instead of @/admin-console/services/admin-console-service.ts"
							},
							"axios": {
								"allowImportNames": [
									"AxiosError",
									"HttpStatusCode"
								],
								"message": "Use a custom instance of Axios"
							},
							"react-i18next": {
								"message": "Use @/common/hooks/use-translation/useTranslation.ts instead of react-i18next"
							},
							"react-icons": {
								"allowImportNames": [
									"fa",
									"fa6",
									"IconBaseProps"
								],
								"message": "Only 'react-icons/fa' and 'react-icons/fa6' are allowed"
							}
						}
					}
				},
				"noRestrictedTypes": "error",
				"noShoutyConstants": "error",
				"noSubstr": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"noValueAtRule": "error",
				"noYodaExpression": "error",
				"recommended": true,
				"useArrayLiterals": "error",
				"useAsConstAssertion": "error",
				"useAtIndex": "error",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useCollapsedIf": "error",
				"useComponentExportOnlyModules": "off",
				"useConsistentArrayType": "error",
				"useConsistentBuiltinInstantiation": "error",
				"useConsistentMemberAccessibility": "error",
				"useConst": "error",
				"useDefaultParameterLast": "error",
				"useDefaultSwitchClause": "error",
				"useDeprecatedReason": "error",
				"useEnumInitializers": "error",
				"useExplicitLengthCheck": "error",
				"useExponentiationOperator": "error",
				"useExportType": "error",
				"useFilenamingConvention": "off",
				"useForOf": "error",
				"useFragmentSyntax": "error",
				"useImportType": "error",
				"useLiteralEnumMembers": "error",
				"useNamingConvention": "off",
				"useNodeAssertStrict": "error",
				"useNodejsImportProtocol": "error",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useShorthandAssign": "error",
				"useShorthandFunctionType": "error",
				"useSingleVarDeclarator": "error",
				"useTemplate": "error",
				"useThrowNewError": "error",
				"useThrowOnlyError": "error",
				"useTrimStartEnd": "error"
			},
			"suspicious": {
				"noConsole": {
					"level": "error",
					"options": {
						"allow": [
							"assert",
							"error",
							"info",
							"warn"
						]
					}
				},
				"noDuplicateTestHooks": "error",
				"noEmptyBlockStatements": "error",
				"noEvolvingTypes": "error",
				"noExportsInTest": "error",
				"noFocusedTests": "error",
				"noSkippedTests": "error",
				"noVar": "error",
				"useAwait": "error",
				"useErrorMessage": "error",
				"useNumberToFixedDigitsArgument": "error"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": false,
		"useIgnoreFile": false
	}
}